<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aheadinabox.alllightsoff.LevelsActivity"
    tools:ignore="ContentDescription">

    <TextView
        android:id="@+id/header"
        style="@style/TextHeader"
        android:text="@string/header_help"/>

    <ScrollView
        android:scrollbarStyle="outsideOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:fadingEdgeLength="16dp"
        android:gravity="center"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin"
        android:requiresFadingEdge="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextParagraph"
                android:text="@string/help_paragraph1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/example_pattern"/>

            <View style="@style/Separator"/>

            <TextView
                style="@style/TextParagraph"
                android:text="@string/help_paragraph2"/>

            <LinearLayout
                style="@style/HelpGridLayout"
                android:layout_marginBottom="@dimen/medium_margin">

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/ic_menu_default"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/ic_levels_default"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/ic_prev_default"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/ic_reset_default"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/ic_next_default"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/ic_undo_default"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/ic_help_default"/>

            </LinearLayout>

            <GridLayout
                style="@style/HelpGridLayout"
                android:columnCount="2">

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/ic_menu_default"/>

                <TextView
                    style="@style/ListParagraph"
                    android:text="@string/help_paragraph3"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/ic_levels_default"/>

                <TextView
                    style="@style/ListParagraph"
                    android:text="@string/help_paragraph4"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/ic_prev_default"/>

                <TextView
                    style="@style/ListParagraph"
                    android:text="@string/help_paragraph5"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/ic_reset_default"/>

                <TextView
                    style="@style/ListParagraph"
                    android:text="@string/help_paragraph6"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/ic_next_default"/>

                <TextView
                    style="@style/ListParagraph"
                    android:text="@string/help_paragraph7"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/ic_undo_default"/>

                <TextView
                    style="@style/ListParagraph"
                    android:text="@string/help_paragraph8"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/ic_help_default"/>

                <TextView
                    style="@style/ListParagraph"
                    android:text="@string/help_paragraph9"/>

            </GridLayout>

            <TextView
                style="@style/TextParagraph"
                android:text="@string/help_paragraph10"/>

            <View style="@style/Separator"/>

            <TextView
                style="@style/TextParagraph"
                android:text="@string/help_paragraph11"/>

            <LinearLayout
                style="@style/HelpGridLayout"
                android:layout_marginBottom="@dimen/medium_margin"
                android:weightSum="12">

                <TextView
                    style="@style/TileMediumHelp"
                    android:layout_weight="1"
                    android:background="@drawable/bkg_text"
                    android:text="@string/help_level_number"
                    android:textColor="@color/colorTextPanel"
                    android:textSize="@dimen/small_text"/>

                <TextView
                    style="@style/TileMediumHelp"
                    android:layout_weight="3"
                    android:background="@drawable/bkg_text"
                    android:text="@string/help_level_name"
                    android:textColor="@color/colorTextPanel"
                    android:textSize="@dimen/small_text"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/star_lit"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/star_lit"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/star_lit"/>

            </LinearLayout>

            <GridLayout
                style="@style/HelpGridLayout"
                android:columnCount="2">

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/star_lit"/>

                <TextView
                    style="@style/ListParagraph"
                    android:text="@string/help_paragraph12"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/star_unlit"/>

                <TextView
                    style="@style/ListParagraph"
                    android:text="@string/help_paragraph13"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/star_question"/>

                <TextView
                    style="@style/ListParagraph"
                    android:text="@string/help_paragraph14"/>

                <ImageView
                    style="@style/TileMediumHelp"
                    android:src="@drawable/star_disabled"/>

                <TextView
                    style="@style/ListParagraph"
                    android:text="@string/help_paragraph15"/>

            </GridLayout>


            <TextView
                style="@style/TextParagraph"
                android:text="@string/help_paragraph16"/>

            <View style="@style/Separator"/>

            <TextView
                style="@style/TextParagraph"
                android:text="@string/help_paragraph17"/>

            <LinearLayout
                style="@style/HelpGridLayout"
                android:layout_marginBottom="@dimen/medium_margin">

                <ImageView
                    style="@style/TileSmallHelp"
                    android:src="@drawable/move_bronze"/>

                <ImageView
                    style="@style/TileSmallHelp"
                    android:src="@drawable/move_bronze"/>

                <ImageView
                    style="@style/TileSmallHelp"
                    android:src="@drawable/move_bronze"/>

                <ImageView
                    style="@style/TileSmallHelp"
                    android:src="@drawable/move_silver"/>

                <ImageView
                    style="@style/TileSmallHelp"
                    android:src="@drawable/move_silver"/>

                <ImageView
                    style="@style/TileSmallHelp"
                    android:src="@drawable/move_silver"/>

                <ImageView
                    style="@style/TileSmallHelp"
                    android:src="@drawable/move_gold"/>

                <ImageView
                    style="@style/TileSmallHelp"
                    android:src="@drawable/move_gold"/>

                <ImageView
                    style="@style/TileSmallHelp"
                    android:src="@drawable/move_gold"/>

            </LinearLayout>

            <TextView
                style="@style/TextParagraph"
                android:text="@string/help_paragraph18"/>

            <View style="@style/Separator"/>

            <TextView
                style="@style/TextParagraph"
                android:text="@string/help_paragraph19"/>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bkg_popup">

                <TextView
                    android:id="@+id/pop_up_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/medium_margin"
                    android:gravity="center"
                    android:text="@string/message_gold"
                    android:textSize="@dimen/medium_text"/>

                <ImageView
                    android:layout_below="@id/pop_up_message"
                    android:layout_above="@id/pop_up_moves"
                    android:id="@+id/cup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/cup_gold"/>

            </RelativeLayout>

            <TextView
                style="@style/TextParagraph"
                android:text="@string/help_paragraph20"/>

            <View style="@style/Separator"/>

            <Button
                android:id="@+id/back"
                style="@style/MenuButton"
                android:drawableEnd="@drawable/ic_menu_button_menu"
                android:drawableRight="@drawable/ic_menu_button_menu"
                android:onClick="backToMenu"
                android:text="@string/button_back_to_main"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>