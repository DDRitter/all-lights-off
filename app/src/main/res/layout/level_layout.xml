<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/level_pattern"
        android:layout_width="96dp"
        android:layout_height="136dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bkg_pattern_thumb"
        android:contentDescription="@null"
        android:padding="10dp"
        android:scaleType="fitStart"/>

    <TextView
        android:id="@+id/level_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/level_pattern"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="000"
        android:textColor="#FF00AAFF"
        android:textSize="@dimen/small_text"/>

    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/level_pattern"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="@dimen/star_thumb"
            android:layout_height="@dimen/star_thumb"
            android:layout_gravity="bottom"
            android:contentDescription="@null"
            android:src="@drawable/star_unlit"/>

        <ImageView
            android:id="@+id/star2"
            android:layout_width="@dimen/star_thumb"
            android:layout_height="@dimen/star_thumb"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/small_margin"
            android:contentDescription="@null"
            android:src="@drawable/star_unlit"/>

        <ImageView
            android:id="@+id/star3"
            android:layout_width="@dimen/star_thumb"
            android:layout_height="@dimen/star_thumb"
            android:layout_gravity="bottom"
            android:contentDescription="@null"
            android:src="@drawable/star_unlit"/>

    </LinearLayout>

</RelativeLayout>