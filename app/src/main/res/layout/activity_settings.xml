<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg_paper"
    tools:context="com.aheadinabox.alllightsoff.LevelsActivity">

    <TextView
        android:id="@+id/header"
        style="@style/TextHeader"
        android:text="@string/header_settings"/>

    <ScrollView
        android:scrollbarStyle="outsideOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:columnWidth="96dp"
        android:fadingEdgeLength="16dp"
        android:gravity="center"
        android:horizontalSpacing="16dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="auto_fit"
        android:padding="@dimen/medium_margin"
        android:requiresFadingEdge="vertical"
        android:stretchMode="spacingWidth"
        android:verticalSpacing="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textSize="@dimen/medium_text"
                android:text="@string/setting_music"
                android:textColor="@color/colorTextSettings"/>

            <View style="@style/Separator"/>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textSize="@dimen/medium_text"
                android:text="@string/setting_sound"
                android:textColor="@color/colorTextSettings"/>

            <View style="@style/Separator"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setting_language"
                android:textSize="@dimen/medium_text"
                android:layout_marginBottom="@dimen/small_margin"
                android:textColor="@color/colorTextSettings"/>

            <RadioGroup
                android:id="@+id/radio_group_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_button_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:textSize="@dimen/small_text"
                    android:text="English"
                    android:textColor="@color/colorTextSettings"/>

                <RadioButton
                    android:id="@+id/radio_button_spanish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:text="Spanish"
                    android:textColor="@color/colorTextSettings"/>
            </RadioGroup>

            <View style="@style/Separator"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_margin"
                android:text="@string/setting_tile"
                android:textColor="@color/colorTextSettings"/>

            <RadioGroup
                android:id="@+id/radio_group_tile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_margin"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_button_tile1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:drawableLeft="@drawable/tile_on"/>


                <RadioButton
                    android:id="@+id/radio_button_tile2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:drawableLeft="@drawable/tile_off"/>

                <RadioButton
                    android:id="@+id/radio_button_tile3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:drawableLeft="@drawable/tile_solution"/>

            </RadioGroup>

            <View style="@style/Separator"/>

            <Button
                style="@style/MenuButton"
                android:layout_margin="@dimen/medium_margin"
                android:onClick="resetLevels"
                android:text="@string/setting_reset"/>

            <View style="@style/Separator"/>

            <Button
                android:id="@+id/back"
                style="@style/MenuButton"
                android:drawableEnd="@drawable/ic_menu_button_menu"
                android:drawableRight="@drawable/ic_menu_button_menu"
                android:onClick="backToMenu"
                android:text="@string/button_back_to_main"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
