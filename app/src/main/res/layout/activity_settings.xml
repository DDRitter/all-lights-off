<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg_paper"
    tools:context="com.artactivo.alllightsoff.LevelsActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/header_settings"
        android:textSize="@dimen/huge_text"/>

    <ScrollView
        android:id="@+id/level_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:columnWidth="96dp"
        android:fadingEdgeLength="16dp"
        android:gravity="center"
        android:horizontalSpacing="16dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="auto_fit"
        android:padding="@dimen/medium_margin"
        android:requiresFadingEdge="vertical"
        android:stretchMode="spacingWidth"
        android:verticalSpacing="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_margin"
                android:textColor="@color/colorTextSettings"
                android:checked="true"
                android:text="@string/setting_music"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"/>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSettings"
                android:layout_margin="@dimen/medium_margin"
                android:checked="true"
                android:text="@string/setting_sound"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_margin"
                android:textColor="@color/colorTextSettings"
                android:text="@string/setting_language"/>

            <RadioGroup
                android:id="@+id/radio_group_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_margin"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_button_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextSettings"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:text="English"/>

                <RadioButton
                    android:id="@+id/radio_button_spanish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextSettings"
                    android:text="Spanish"/>
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_margin"
                android:textColor="@color/colorTextSettings"
                android:text="@string/setting_tile"/>

            <RadioGroup
                android:id="@+id/radio_group_tile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_margin"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_button_tile1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/tile_on"
                    android:layout_marginRight="@dimen/medium_margin"/>


                <RadioButton
                    android:id="@+id/radio_button_tile2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/tile_off"
                    android:layout_marginRight="@dimen/medium_margin"/>

                <RadioButton
                    android:id="@+id/radio_button_tile3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/tile_solution"
                    android:layout_marginRight="@dimen/medium_margin"/>

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_margin"
                android:textColor="@color/colorTextSettings"
                android:checked="true"
                android:text="@string/setting_reset"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"/>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
