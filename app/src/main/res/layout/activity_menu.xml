<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg_paper"
    android:orientation="vertical"
    android:paddingBottom="@dimen/medium_margin"
    android:paddingLeft="@dimen/medium_margin"
    android:paddingRight="@dimen/medium_margin"
    android:paddingTop="@dimen/medium_margin"
    android:weightSum="14"
    tools:context=".MenuActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:padding="@dimen/medium_margin"
        android:scaleType="centerInside"
        android:src="@drawable/header"
        android:textSize="@dimen/huge_text"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_weight="2"
        android:onClick="openGame"
        android:text="@string/play_button"
        android:background="@drawable/bkg_button"
        android:textSize="@dimen/medium_text"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_weight="2"
        android:onClick="openLevels"
        android:text="@string/level_button"
        android:background="@drawable/bkg_button"
        android:textSize="@dimen/medium_text"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_weight="1"
        android:onClick="loadData"
        android:text="Load Data"
        android:background="@drawable/bkg_button"
        android:textSize="@dimen/medium_text"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_weight="1"
        android:onClick="resetData"
        android:text="Reset Game Data"
        android:background="@drawable/bkg_button"
        android:textSize="@dimen/medium_text"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_weight="2"
        android:onClick="openSettings"
        android:text="@string/settings_button"
        android:background="@drawable/bkg_button"
        android:textSize="@dimen/medium_text"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_weight="2"
        android:onClick="openHelp"
        android:text="@string/help_button"
        android:background="@drawable/bkg_button"
        android:textSize="@dimen/medium_text"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:onClick="openAbout"
        android:text="@string/about_button"
        android:background="@drawable/bkg_button"
        android:textSize="@dimen/medium_text"/>

</LinearLayout>
