<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bkg_paper</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="MenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/bkg_menu_button_selector</item>
        <item name="android:paddingLeft">@dimen/medium_margin</item>
        <item name="android:paddingRight">@dimen/medium_margin</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="TextHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/huge_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
    </style>

    <style name="TextParagraph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">left|start</item>
    </style>

    <style name="ListParagraph" parent="TextParagraph">
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:layout_marginRight">36dp</item>
        <item name="android:layout_marginTop">@dimen/tiny_margin</item>
        <item name="android:layout_marginBottom">@dimen/tiny_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="TileSmallHelp">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TileMediumHelp">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:contentDescription">""</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:layout_gravity">center|center_vertical</item>
    </style>

    <style name="ButtonRowHelp">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="HelpGridLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
